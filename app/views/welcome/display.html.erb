<h1>Welcome  <%= @user.name %> to Library</h1>

<div class=".upcomingBookings">

  <table>
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>Room No.</th>
      <th>Check In Time</th>
      <th>Check Out Time</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% getUpComingBookings.each do |upcoming| %>
        <tr>
          <td><%= upcoming.id %></td>
          <td><%= upcoming.room_id %></td>
          <td><%= Time.parse(upcoming.checkin).strftime('%m/%d/%Y %H:%M') %></td>
          <td><%= Time.parse(upcoming.checkout).strftime('%m/%d/%Y %H:%M') %></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>


<div>
<P>Click <%=link_to 'here', bookingHistory_path %> if you would like to view your booking history</P>
</div>