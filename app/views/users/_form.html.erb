<%= form_for(user) do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :phoneNumber %>
      <%= f.text_field :phoneNumber %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :role %>
      <%=f.select(:role,options_for_select([['Normal', 'Normal'], ['Admin', 'Admin']]))%>
    </div>

    <div class="field">
      <%= f.label :allow_multiple %>
      <%=f.select(:allow_multiple,options_for_select([['Disallow', false],['Allow', true] ]))%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
